# FreshTrack Backend Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE

# Local development
DATABASE_URL=postgresql://postgres:password@localhost:5432/freshtrack

# Supabase (cloud PostgreSQL)
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT secret key for signing tokens
# IMPORTANT: Use a long, random string in production
# Generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# =============================================================================
# SERVER
# =============================================================================

# Port for the Express server (optional, defaults to 3001)
PORT=3001

# =============================================================================
# AI SERVICES
# =============================================================================

# Groq API key for AI meal plan generation
# Get your free API key at: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here
